{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "lib": [
      "es5",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "./lib/**/*.ts",
    "./node_modules/types-mediawiki",
    "rollup.config.ts"
  ],
  "exclude": []
}
