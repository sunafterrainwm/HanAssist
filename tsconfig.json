{
  "compilerOptions": {
    "target": "ES2016", // MediaWiki >= 1.42.0-wmf.13 supports up to ES2016
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "./dist/",
    "rootDir": "./lib/",
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": []
}